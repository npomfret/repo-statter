{
  "name": "repo-statter",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "start": "tsx src/cli.ts",
    "analyse": "tsx src/cli.ts",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:report": "TEST_REPO_PATH=$(./scripts/create-test-repo.sh --reuse | grep TEST_REPO_PATH | cut -d'=' -f2) && npm run analyse \"$TEST_REPO_PATH\" -- --output-file test-repo-analysis",
    "test:clean": "./scripts/clean-test-repo.sh",
    "typecheck": "tsc --noEmit",
    "lint": "tsc --noEmit"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "minimatch": "^10.0.1",
    "simple-git": "^3.28.0"
  },
  "devDependencies": {
    "@types/commander": "^2.12.0",
    "@types/node": "^22.10.5",
    "@vitest/coverage-v8": "^2.1.8",
    "apexcharts": "^5.2.0",
    "esbuild": "^0.25.6",
    "tsx": "^4.20.3",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  },
  "private": true
}
