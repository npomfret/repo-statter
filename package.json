{
  "name": "repo-statter",
  "version": "0.0.18",
  "description": "Generate beautiful, interactive HTML reports from your git repository history with charts, statistics, and insights",
  "type": "module",
  "main": "./dist/cli.js",
  "types": "./dist/cli.d.ts",
  "bin": {
    "repo-statter": "dist/cli.js"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "start": "tsx src/cli.ts",
    "analyse": "tsx src/cli.ts",
    "dev:watch": "tsx watch scripts/dev-build.js src/",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:report": "npm run test:clean && TEST_REPO_PATH=$(./scripts/create-test-repo.sh --reuse | grep TEST_REPO_PATH | cut -d'=' -f2) && npm run analyse \"$TEST_REPO_PATH\" -- --output-file test-repo-analysis",
    "test:clean": "./scripts/clean-test-repo.sh",
    "typecheck": "tsc --noEmit",
    "lint": "tsc --noEmit",
    "gh-pages": "npm run build && npm run analyse -- . -o docs/repo-statter && mv docs/repo-statter/repo-statter.html docs/repo-statter/index.html",
    "build": "tsc",
    "prepublishOnly": "npm run clean && npm run build && npm run test",
    "preversion": "npm run test",
    "postversion": "git push && git push --tags",
    "release": "npm version patch && npm publish"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "esbuild": "^0.25.6",
    "minimatch": "^10.0.1",
    "simple-git": "^3.28.0"
  },
  "devDependencies": {
    "@types/commander": "^2.12.0",
    "@types/node": "^22.10.5",
    "@vitest/coverage-v8": "^2.1.8",
    "apexcharts": "^5.2.0",
    "tsx": "^4.20.3",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  },
  "files": [
    "dist",
    "src/report/template.html",
    "src/images",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/npomfret/repo-statter.git"
  },
  "keywords": [
    "git",
    "statistics",
    "analysis",
    "repository",
    "cli",
    "metrics"
  ],
  "license": "MIT"
}
