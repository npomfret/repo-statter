{
  "name": "repo-statter-v2",
  "version": "2.0.0-alpha.0",
  "private": true,
  "description": "Next-generation git repository analyzer with streaming architecture",
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:bench": "vitest bench",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:visual": "playwright test visual-regression",
    "test:accessibility": "playwright test accessibility",
    "test:integration": "playwright test integration",
    "test:all": "pnpm test && pnpm test:e2e",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "typecheck": "tsc --build",
    "clean": "pnpm -r clean",
    "dev:playground": "pnpm --filter playground dev",
    "dev:watch": "pnpm -r --parallel dev:watch",
    "prepare": "husky",
    "quality:check": "node scripts/validate-quality-gates.js",
    "release:prepare": "pnpm quality:check && pnpm build"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.3",
    "@playwright/test": "^1.41.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/ui": "^3.2.4",
    "c8": "^10.1.3",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "playwright": "^1.41.0",
    "prettier": "^3.0.0",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
